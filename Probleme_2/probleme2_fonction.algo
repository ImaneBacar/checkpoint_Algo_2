ALGORITHM Produit en points
VAR
    v1:ARRAY_OF FLOAT[]; 
    v2:ARRAY_OF FLOAT[];
    ps :FLOAT;
    i:INTEGER;
    n:INTEGER;
BEGIN
/* fonction dot_product  */
    FUNCTION dot_product(v1:ARRAY_OF FLOAT[], v2:ARRAY_OF FLOAT[],ps :FLOAT,n:INTEGER) : FLOAT
    VAR
        i:INTEGER;
    BEGIN
        ps:=0;
        FOR i FROM 0 TO n-1 STEP 1  DO
            ps := ps + v1[i]*v2[i];
        END_FOR
        RETURN ps ;
    END
/* entrez taille du tableau  */
    write("Entrez le taille des vecteurs : ")
    read(n)

/* entrez des valeurs  */
    write("Entrez les composantes du vecteur v1 :")
    FOR i FROM 0 TO n-1 STEP 1  DO
        read(v1[i])
    END_FOR 
    
    /* entrez des valeurs  */
    write("Entrez les composantes du vecteur v2 :")
    FOR i FROM 0 TO n-1 STEP 1  DO
        read(v2[i])
    END_FOR 
        
    /* valeur recu du produits scalaire  */
    ps = dot_product(v1,v2,ps,n)
    IF (ps = 0 ) THEN
        write("Les vecteurs sont orthogonaux")
    ELSE
        write("Les vecteurs ne sont pas orthogonaux")
    END_IF
END
